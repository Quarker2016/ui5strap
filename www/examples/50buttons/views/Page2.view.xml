<sapUiCoreMvc:View controllerName="pks.ui5strap.viewer.ActionController" xmlns="pks.ui5strap.bs3" xmlns:ui5strapCore="pks.ui5strap.core" xmlns:sapUiCoreMvc="sap.ui.core.mvc"
                      xmlns:data="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
    
    <Page>
            <head>
                <Bar inverse="true">
                    <Heading options="BarHeadingCenter" text="{i18n>PAGE2_TITLE}" />
                </Bar>
            </head>
            <body>
                <ui5strapCore:PlainList  selection-mode="Single" class="nav-round-btns" items="{buttons>/page2}">
                    <ui5strapCore:PlainListItem>
						<Link tap="__execute" data:__action="{buttons>action}">
                    		<Icon icon="{buttons>icon}" />
                    	</Link>
                    </ui5strapCore:PlainListItem>
                </ui5strapCore:PlainList >

            </body>
    </Page>

</sapUiCoreMvc:View>