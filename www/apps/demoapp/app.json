{
	"app" : {
	        "id" : "ui5strap.demoapp",
	        "name" : "Ui5Strap Demo",
	        
	        "rootComponent" : true,
	        
	        "logLevel" : 5,
	        "mode" : "Devel"
	},
	
	"options" : {
	   
	
	},
	
	"css" : [
		"css/demoapp.css"
	],
	
	"models" : [
            {
                "src" : "i18n/i18n.properties",
                "type" : "RESOURCE",
                "modelName" : "i18n" 
            },
            {
                "src" : "data/menu.json",
                "type" : "JSON",
                "modelName" : "menu" 
            }
    ],
    
    "views" : [
    		
    		
    		{
                "id" : "menuRoot",
                "viewName" : ".views.home.MenuRoot",
                "target" : "bar",
                "transition" : "transition-none"
            },
            
            {
                "id" : "home",
                "viewName" : ".views.home.Home"
            },

            
            
            {
                "id" : "feed",
                "viewName" : ".views.rest.Feed"
            },
            
            {
                "id" : "newPost",
                "viewName" : ".views.rest.NewPost"
            },
            
            {
                "id" : "postDetail",
                "viewName" : ".views.rest.PostDetail"
            },
            
            
            
            {
            	"id" : "controls",
            	"viewName" : ".views.controls.BootstrapControls",
            	"events" : {
                	"controller" : {
                	   "pageShow" : [
                	       ".actions.controls.LoadMenuControls",
                	       ".actions.controls.NavigateToControlsButtons"
                	   ]
                	}
                }
            },
            
            {
                "id" : "menuControls",
                "viewName" : ".views.controls.MenuControls",
                "target" : "bar",
                "transition" : "transition-none"
            },
            
            {
            	"id" : "controlsButtons",
            	"viewName" : ".views.controls.Buttons"
            },
            
            {
            	"id" : "controlsContainers",
            	"viewName" : ".views.controls.Containers"
            },
            
            {
            	"id" : "controlsIcons",
            	"viewName" : ".views.controls.Icons"
            },
            
            {
            	"id" : "controlsTypography",
            	"viewName" : ".views.controls.Typography"
            },
			
			{
            	"id" : "controlsNavs",
            	"viewName" : ".views.controls.Navs"
            },
            
            {
            	"id" : "controlsGridSystem",
            	"viewName" : ".views.controls.GridSystem"
            },
            
            {
            	"id" : "controlsProgress",
            	"viewName" : ".views.controls.Progress"
            },
            
            {
            	"id" : "controlsForm",
            	"viewName" : ".views.controls.Form"
            },
            
            {
                "id" : "controlsWheels",
                "viewName" : ".views.controls.Wheels"
            },
            
            {
            	"id" : "controlsIndicators",
            	"viewName" : ".views.controls.Indicators"
            },
            
            {
            	"id" : "controlsMediaList",
            	"viewName" : ".views.controls.MediaList"
            },
            
            {
            	"id" : "controlsDialogs",
            	"viewName" : ".views.controls.Dialogs"
            },
            
            
            
            {
                "id" : "cuscon",
                "viewName" : ".views.cuscon.CustomControls",
                "events" : {
                    "controller" : {
                        "pageShow" : [
                            ".actions.cuscon.LoadMenuCuscon",
                            ".actions.cuscon.NavigateToCusconSimple"
                        ]
                    }
                }
            },
            
            {
                "id" : "menuCuscon",
                "viewName" : ".views.cuscon.MenuCuscon",
                "target" : "bar",
                "transition" : "transition-none"
            },
            
            {
                "id" : "cusconSimple",
                "viewName" : ".views.cuscon.SimpleCustomControl"
            },



            {
                "id" : "settings",
                "viewName" : ".views.settings.Settings",
                "events" : {
                    "controller" : {
                        "pageShow" : [
                            ".actions.settings.LoadMenuSettings",
                            ".actions.settings.NavigateToSettingsLanguage"
                        ]
                    }
                }
            },
            
            
            
            {
                "id" : "menuSettings",
                "viewName" : ".views.settings.MenuSettings",
                "target" : "bar",
                "transition" : "transition-none"
            },
            
            {
                "id" : "settingsLanguage",
                "viewName" : ".views.settings.Language",
                "events" : {
                    "controller" : {
                        "update" : ".actions.settings.SetCurrentLanguage"    
                    }
                }
            },
            
            {
                "id" : "settingsTheme",
                "viewName" : ".views.settings.Theme"
            }
      ],
	
	"actions" : [
		".actions.home.NavigateToHome",
		".actions.home.ToggleBarMenuRoot",
		".actions.home.NavigateViaMenuRoot",
		".actions.home.SetSelectedMenuRoot",
		
		".actions.rest.NavigateToFeed",
		".actions.rest.AppendFeed",
        ".actions.rest.RemovePost",
        ".actions.rest.ShowNewPostOverlay",
        ".actions.rest.CloseOverlay",
        
        ".actions.controls.LoadMenuControls",
		".actions.controls.ToggleBarMenuControls",
		".actions.controls.NavigateViaMenuControls", 
		".actions.controls.SetSelectedMenuControls",
		".actions.controls.NavigateToControlsButtons",
		
		".actions.cuscon.NavigateToCusconSimple",
		".actions.cuscon.ToggleBarMenuCuscon",
		
		".actions.settings.LoadMenuSettings",
        ".actions.settings.ToggleBarMenuSettings",
        ".actions.settings.NavigateViaMenuSettings", 
        ".actions.settings.SetSelectedMenuSettings",
        ".actions.settings.NavigateToSettingsLanguage",
        
        ".actions.settings.ChangeTheme",
		".actions.settings.SelectLanguage",
		
		".actions.Debug"
	],
	
	"rootNavigation" : {
	     "module" : "ui5strap.BarNavContainer",
         "settings" : {
         	"barSizeExtraSmall" : 1,
         	"barPlacementExtraSmall" : "Top",
         	
         
         	"barSizeSmall" : 2,
         	"barPlacementSmall" : "Right",
         	
         	"barSizeMedium" : 1,
         	"barPlacementMedium" : "Bottom",
         	"barTransitionMedigum" : "none",
         	
         	"barSizeLarge" : 5,
         	"barPlacementLarge" : "Left",
         	"barModeLarge" : "Intrude",
         	
         	"barVisible" : false
         	
         },
         
         "events" : {
         	"control" : {
         		"pageChange" : [
         			".actions.home.SetSelectedMenuRoot"
         		]
         	}
         },
         
         "initialViews" : [
             "home",
             "menuRoot"
         ]
	},
	
	"components" : [
			{
	             "id" : "feedManager",
	             "type" : ".modules.FeedManager"
	        },
	        
	        {
	             "id" : "feedClient",
	             "type" : "ui5strap.RestClient",
                     
	             "settings" : {
		             "url" : "/api/feed",
		             "methods" : {
		             	"info" : {
		             		"type" : "get",
		             		"arguments" : ["success", "error"]
		             	},
		             	
		             	"deletePost" : {
		             		"type" : "postUrlEncoded",
		             		"arguments" : ["post.postId", "success", "error"]
		             	},
		             	
		             	"readPost" : {
		             		"path" : "read-post/{postId}",
		             		"type" : "get",
		             		"arguments" : ["path.postId", "success", "error"]
		             	},
		             	
		             	"newPost" : {
		             		"type" : "postWithPayload",
		             		"arguments" : ["payload", "success", "error"]
		             	}
		             }
	             }
	         }
	]
}