{
	"app" : {
	        "id" : "ui5strap.demoapp",
	        "name" : "Ui5Strap Demo",
	        
	        "rootComponent" : true,
	        
	        "logLevel" : 5,
	        "mode" : "Devel"
	},
	
	"css" : [
		"css/demoapp.css"
	],
	
	"models" : [
            {
                "src" : "i18n/i18n.properties",
                "type" : "RESOURCE",
                "modelName" : "i18n" 
            },
            {
                "src" : "data/menu.json",
                "type" : "JSON",
                "modelName" : "menu" 
            }
    ],
    
    "views" : [
    		{
                "id" : "menuRoot",
                "viewName" : ".views.MenuRoot",
                "target" : "bar"
            },
            
            {
                "id" : "home",
                "viewName" : ".views.Home"
            },

            {
                "id" : "feed",
                "viewName" : ".views.Feed"
            },

            {
                "id" : "statistics",
                "viewName" : ".views.Statistics"
            },

            {
                "id" : "settings",
                "viewName" : ".views.Settings",
                "events" : {
                	"controller" : {
                		"pageShow" : [
                			".actions.LoadMenuSettings",
                			".actions.NavigateToSettingsLanguage"
                		]
                	}
                }
            },
            
            {
                "id" : "menuSettings",
                "viewName" : ".views.MenuSettings",
                "target" : "bar"
            },
            
            {
                "id" : "settingsLanguage",
                "viewName" : ".views.settings.Language",
                "events" : {
                	"controller" : {
                		"update" : ".actions.SetCurrentLanguage"	
                	}
                }
            },
            
            {
                "id" : "settingsTheme",
                "viewName" : ".views.settings.Theme"
            },
            
            
            {
            	"id" : "controls",
            	"viewName" : ".views.Controls",
            	"events" : {
                	"controller" : {
                	   "pageShow" : [
                	       ".actions.LoadMenuControls",
                	       ".actions.NavigateToControlsButtons"
                	   ]
                	}
                }
            },
            
            {
                "id" : "menuControls",
                "viewName" : ".views.MenuControls",
                "target" : "bar"
            },
            
            {
            	"id" : "controlsButtons",
            	"viewName" : ".views.controls.Buttons"
            },
            
            {
            	"id" : "controlsContainers",
            	"viewName" : ".views.controls.Containers"
            },
            
            {
            	"id" : "controlsIcons",
            	"viewName" : ".views.controls.Icons"
            },
            
            {
            	"id" : "controlsTypography",
            	"viewName" : ".views.controls.Typography"
            },
			
			{
            	"id" : "controlsNavs",
            	"viewName" : ".views.controls.Navs"
            },
            
            {
            	"id" : "controlsGridSystem",
            	"viewName" : ".views.controls.GridSystem"
            },
            
            {
            	"id" : "controlsProgress",
            	"viewName" : ".views.controls.Progress"
            },
            
            {
            	"id" : "controlsForm",
            	"viewName" : ".views.controls.Form"
            },
            
            {
                "id" : "controlsWheels",
                "viewName" : ".views.controls.Wheels"
            },
            
            {
            	"id" : "controlsIndicators",
            	"viewName" : ".views.controls.Indicators"
            },
            
            {
            	"id" : "controlsMediaList",
            	"viewName" : ".views.controls.MediaList"
            },
            
            {
            	"id" : "controlsDialogs",
            	"viewName" : ".views.controls.Dialogs"
            },
            
            {
                "id" : "newPost",
                "viewName" : ".views.NewPost"
            },
            {
                "id" : "postDetail",
                "viewName" : ".views.PostDetail"
            }
      ],
	
	"actions" : [
		".actions.NavigateToHome",
		".actions.NavigateToFeed",
		".actions.NavigateToStatistics",
		
		
		".actions.ToggleBarMenuRoot",
		".actions.NavigateViaMenuRoot",
		".actions.SetSelectedMenuRoot",
		
		".actions.LoadMenuSettings",
		".actions.ToggleBarMenuSettings",
		".actions.NavigateViaMenuSettings", 
		".actions.SetSelectedMenuSettings",
		".actions.NavigateToSettingsLanguage",
		
		".actions.LoadMenuControls",
		".actions.ToggleBarMenuControls",
		".actions.NavigateViaMenuControls", 
		".actions.SetSelectedMenuControls",
		".actions.NavigateToControlsButtons",
		
		".actions.AppendFeed",
		".actions.RemovePost",
		".actions.ShowNewPostOverlay",
		".actions.CloseOverlay",
		
		".actions.ChangeTheme",
		".actions.SelectLanguage",
		
		".actions.Debug"
	],
	
	"rootNavigation" : {
	     "module" : "ui5strap.BarNavContainer",
         "settings" : {
         	"barSizeExtraSmall" : 1,
         	"barPlacementExtraSmall" : "Top",
         	
         
         	"barSizeSmall" : 2,
         	"barPlacementSmall" : "Right",
         	
         	"barSizeMedium" : 1,
         	"barPlacementMedium" : "Bottom",
         	"barTransitionMedigum" : "none",
         	
         	"barSizeLarge" : 5,
         	"barPlacementLarge" : "Left",
         	"barModeLarge" : "Intrude",
         	
         	"barVisible" : false
         	
         },
         
         "events" : {
         	"control" : {
         		"pageChange" : [
         			".actions.SetSelectedMenuRoot"
         		]
         	}
         },
         
         "initialViews" : [
             "home",
             "menuRoot"
         ]
	},
	
	"components" : [
			{
	             "id" : "feedManager",
	             "type" : ".modules.FeedManager"
	        },
	        
	        {
	             "id" : "feedClient",
	             "type" : "ui5strap.RestClient",
	             "restController" : "FeedController",
                     
	             "settings" : {
		             "url" : "api/feed",
		             "methods" : {
		             	"info" : {
		             		"type" : "get",
		             		"arguments" : ["success", "error"]
		             	},
		             	
		             	"deletePost" : {
		             		"type" : "postUrlEncoded",
		             		"arguments" : ["post.postId", "success", "error"]
		             	},
		             	
		             	"readPost" : {
		             		"path" : "read-post/{postId}",
		             		"type" : "get",
		             		"arguments" : ["path.postId", "success", "error"]
		             	},
		             	
		             	"newPost" : {
		             		"type" : "postWithPayload",
		             		"arguments" : ["payload", "success", "error"]
		             	}
		             }
	             }
	         }
	]
}