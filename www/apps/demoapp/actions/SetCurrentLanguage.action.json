{
	"//" : "Preselect the current system language on the specified ButtonGroup control.",
	"TASKS" : "setCurrentLanguage",
	
	"setCurrentLanguage" : {
		
		"configOBJ" : "= core.getConfiguration()",
		"languageSTR" : "= .configOBJ.getLanguage()",
		
		"viewID" : "= view.getId()",
		"buttonGroupID" : "languageSelect",
		"buttonGroupCTRL" : "= app.getControl(.buttonGroupID, .viewID)",
		"customDataKEY" : "language",
		
		"DO" : "= .buttonGroupCTRL.setSelectionByCustomData(.customDataKEY, .languageSTR)"
	}
	
}