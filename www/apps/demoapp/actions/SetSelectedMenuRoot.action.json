{
	"//" : "Set the main-menu item selected that has the same id as specified NavContainer's current page.",
	
	"TASKS" : ["getCurrentPage", "setListItemSelected"],
	
	"getCurrentPage" : {
		"TYPE" : "ui5strap.AMGetCurrentPage",
		"scope" : "SOURCE",
		
		"target" : "content"
	},
	
	"setListItemSelected" : {
		"TYPE" : "ui5strap.AMSetListItemSelected",
		"scope" : "APP",
		"viewId" : "my-app-bar-menu",
		"controlId" : "myMenu",
		
		"itemId" : "= action.getCurrentPage.result"
	}
}