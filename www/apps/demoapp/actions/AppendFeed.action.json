{
	"//" : "Appends a new media list item to an existing media list.",
	"TASKS" : [
		"createMediaListItem",
		"createMediaListImage",
		"addItemToList"
	],
	
	"createMediaListItem" : {
		"TYPE" : "ui5strap.task.CreateControl",
		
		"viewId" : "=-> view.getId()",
		"titleInputId" : "titleInput",
		"textInputId" : "messageInput",
		"titleInputField" : "=-> app.getControl( .titleInputId, .viewId )",
		"textInputField" : "=-> app.getControl( .textInputId, .viewId )",
		
		"MODULE" : "ui5strap.ListMediaItem",
		"SETTINGS" : {
			"heading" : "=-> .titleInputField.getValue()",
			"text" : "=-> .textInputField.getValue()"
		}
	},
	
	"createMediaListImage" : {
		"TYPE" : "ui5strap.task.CreateControl",
		
		"MODULE" : "ui5strap.Image",
		"SETTINGS" : {
			"type" : "MediaObject",
			"mpath" : "ui5strap.demoapp.img.awesome",
			"ext" : "png",
			"width" : 64
		},
		"addToListItem" : "=-> action.createMediaListItem.INSTANCE.setMedia(.INSTANCE)",
		"DO" : "=-> .addToListItem"
	},
	
	"addItemToList" : {
		
		"viewId" : "=-> view.getId()",
		"mediaListId" : "feeds",
		"mediaList" : "=-> app.getControl( .mediaListId, .viewId )",
		
		"DO" : "=-> .mediaList.addItems( action.createMediaListItem.INSTANCE )" 
	}

}