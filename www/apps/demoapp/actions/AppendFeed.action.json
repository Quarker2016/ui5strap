{
	"//" : "Appends a new media list item to an existing media list.",
	"__format" : "AJ2.0",
	"__modules" : [
		"ui5strap.task.Exec #getTitle",
		"ui5strap.task.Exec #getMessage",
		"ui5strap.AMCreateControl #createMediaListItem",
		"ui5strap.AMCreateControl #createMediaListImage",
		"ui5strap.task.Exec #addImageToItem",
		"ui5strap.task.Exec #addItemToList"
	],
	
	"getTitle" : {
		"viewId" : "&=> view.getId()",
		"controlId" : "titleInput",
		"inputField" : "&=> app.getControl( .controlId, .viewId )",
		"RESULT" : "&=> .inputField.getValue()",
		"COPYTO" : "action.createMediaListItem.settings.heading"
	},
	
	"getMessage" : {
		"viewId" : "&=> view.getId()",
		"controlId" : "messageInput",
		"inputField" : "&=> app.getControl( .controlId, .viewId )",
		"RESULT" : "&=> .inputField.getValue()",
		"COPYTO" : "action.createMediaListItem.settings.text"
	},
	
	"createMediaListItem" : {
		"moduleName" : "ui5strap.ListMediaItem"
	},
	
	"createMediaListImage" : {
		"moduleName" : "ui5strap.Image",
		"settings" : {
			"type" : "MediaObject",
			"mpath" : "ui5strap.demoapp.img.awesome",
			"ext" : "png",
			"width" : 64
		}
	},
	
	"addImageToItem" : {
		"RESULT" : "&=> action.createMediaListItem.result.setMedia( action.createMediaListImage.result )"
	},
	
	"addItemToList" : {
		"viewId" : "&=> view.getId()",
		"controlId" : "feeds",
		"mediaList" : "&=> app.getControl( .controlId, .viewId )",
		"RESULT" : "&=> .mediaList.addItems( action.createMediaListItem.result )"
	}

}