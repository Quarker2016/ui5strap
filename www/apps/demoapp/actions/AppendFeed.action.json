{
	"//" : "Appends a new media list item to an existing media list.",
	"__format" : "AJ2.0",
	"__modules" : [
		"ui5strap.AMDo #getTitle",
		"ui5strap.AMDo #getMessage",
		"ui5strap.AMCreateControl #createMediaListItem",
		"ui5strap.AMCreateControl #createMediaListImage",
		"ui5strap.AMDo #addImageToItem",
		"ui5strap.AMDo #addItemToList"
	],
	
	"getTitle" : {
		"subject" : {
			"scope" : "VIEW",
			"controlId" : "titleInput"
		},
		
		"query" : "= .subject.control.getValue()",
		"tgtParam" : "pool.createMediaListItem.settings.heading"
	},
	
	"getMessage" : {
		"subject" : {
			"scope" : "VIEW",
			"controlId" : "messageInput"
		},
		
		"query" : "= .subject.control.getValue()",
		"tgtParam" : "pool.createMediaListItem.settings.text"
	},
	
	"createMediaListItem" : {
		"moduleName" : "ui5strap.ListMediaItem"
	},
	
	"createMediaListImage" : {
		"moduleName" : "ui5strap.Image",
		"settings" : {
			"type" : "MediaObject",
			"mpath" : "ui5strap.demoapp.img.awesome",
			"ext" : "png",
			"width":64
		}
	},
	
	"addImageToItem" : {
		"subject" : {
			"parameterKey" : "pool.createMediaListItem.result",
			"scope" : "CONTEXT"
		},
		
		"query" : "= .subject.control.setMedia( pool.createMediaListImage.result )"
	},
	
	"addItemToList" : {
		"subject" : {
			"controlId" : "feeds",
			"scope" : "VIEW"
		},
		
		"query" : "= .subject.control.addItems( pool.createMediaListItem.result )"
		
	}

}