{
	"//" : "Appends a new media list item to an existing media list.",
	
	"TASKS" : [
		"addItemToList"
	],
	
	"addItemToList" : {
		
		"CONTROLS" : {
		  "titleInputField" : {
                "SOURCE" : "View",
                "TYPE" : "ui5strap.TextInput",
                "CONTROL_ID" : "titleInput"
            },
            "textInputField" : {
                "SOURCE" : "View",
                "TYPE" : "ui5strap.TextInput",
                "CONTROL_ID" : "messageInput"
            },
			"mediaList" : {
				"SOURCE" : "View",
				"TYPE" : "ui5strap.ListMedia",
				"CONTROL_ID" : "feedList",
				"VIEW_ID" : "feed"
			}
		},
		
		"closeOverlay" : "= app.hideOverlay()",
		"newPostTitle" : "= .CONTROLS.titleInputField.getValue()",
		"newPostText" : "= .CONTROLS.textInputField.getValue()",
		"feedManager" : "= app.getFeedManager()",
		"thenCallback" : "= then()",
		"newPost" : "= .feedManager.newPost(.newPostTitle, .newPostText, .thenCallback)",
		
		"DO" : "= .newPost",
		"THEN" : "= .closeOverlay" 
	}

}