{
	"//" : "Appends a new media list item to an existing media list.",
	"TASKS" : [
		"createMediaListItem",
		"createMediaListImage",
		"addItemToList"
	],
	
	"createMediaListItem" : {
		"TYPE" : "ui5strap.AMCreateControl",
		
		"viewId" : "=-> view.getId()",
		"titleInputId" : "titleInput",
		"textInputId" : "messageInput",
		"titleInputField" : "=-> app.getControl( .titleInputId, .viewId )",
		"textInputField" : "=-> app.getControl( .textInputId, .viewId )",
		
		"moduleName" : "ui5strap.ListMediaItem",
		"settings" : {
			"heading" : "=-> .titleInputField.getValue()",
			"text" : "=-> .textInputField.getValue()"
		}
	},
	
	"createMediaListImage" : {
		"TYPE" : "ui5strap.AMCreateControl",
		"moduleName" : "ui5strap.Image",
		"settings" : {
			"type" : "MediaObject",
			"mpath" : "ui5strap.demoapp.img.awesome",
			"ext" : "png",
			"width" : 64
		}
	},
	
	"addItemToList" : {
		"addToListItem" : "=-> action.createMediaListItem.result.setMedia( action.createMediaListImage.result )",
		
		"viewId" : "=-> view.getId()",
		"mediaListId" : "feeds",
		"mediaList" : "=-> app.getControl( .mediaListId, .viewId )",
		"addToMediaList" : "=-> .mediaList.addItems( action.createMediaListItem.result )",
		
		"DO" : "=-> tools.lang.do(.addToListItem, .addToMediaList)" 
	}

}