<View controllerName="ui5strap.ActionController" xmlns="ui5strap"
	xmlns:data="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<!-- The page control -->
	<Page>
		<!-- Head area with horizontal bar -->
		<head>
			<!-- Bar on top of page -->
			<Bar inverse="true">
				<!-- Left area of bar -->
				<Text align="PullLeft">
					<!-- Back Button -->
					<Button tap="ui5strap.demoapp.actions.NavigateToHome"
						options="BarButton">
						<Icon icon="home" />
					</Button>

					<!-- Toggle Menu Button (except for small screens) -->
					<Button options="BarButton"
							tap="ui5strap.demoapp.actions.ToggleBarMenuRoot" visibilitySmall="Hidden"
						visibilityMedium="Visible">
							<Icon icon="columns" />
					</Button>
				</Text>
				
				<!-- Middle area of bar -->
				<Heading text="{i18n>PAGE2_TITLE}" options="BarHeadingCenter" />

				<!-- Toggle Menu Button (only for small screens) -->
				<Button tap="ui5strap.demoapp.actions.ToggleBarMenuRoot"
						options="BarButton" align="PullRight"
					visibilityExtraSmall="Hidden" visibilitySmall="Visible"
					visibilityMedium="Hidden">
						<Icon icon="columns" />
				</Button>
			</Bar>
		</head>

		<!-- Body area with page content -->
		<body>
			<ScrollContainer vertical="true">
				<Container type="FluidInset" severity="Warning">

					<Panel>

						<titleContent>
							<Text text="{i18n>PAGE2_PANEL_RIGHT_TITLE}" />
							<Button tap="ui5strap.demoapp.actions.ShowNewPostOverlay" align="PullRight">
								<Icon icon="plus" />
							</Button>
						</titleContent>
						<content>
							<ListMedia id="feeds" tap="ui5strap.demoapp.actions.Debug"
								items="{posts>/posts}">

								<!-- Media Item 1 -->
								<ListMediaItem>
									<media>
										<Image options="MediaObject" mpath="{posts>image}" ext="png"
											alt="Image" width="64" />
									</media>
									<content>
										<Icon icon="times" align="PullRight" data:command="DELETE" />
										<Heading level="4" options="MediaHeading" text="{posts>title}" />
										<Text text="{posts>text}" />
										<Button data:command="MORE" text="Submit" severity="Success">
											<Icon data:command="MORE" icon="arrow-right" />
										</Button>

										<ListMedia id="feedsA" tap="ui5strap.demoapp.actions.RemovePost">
											<!-- Media Item 2 (nested) -->
											<ListMediaItem>
												<media>
													<Image options="MediaObject" mpath="ui5strap.demoapp.img.awesome"
														ext="png" alt="Image" width="64" />
												</media>
												<content>
													<Icon icon="times" align="PullRight" />
													<Heading level="4" options="MediaHeading" text="Test Comment" />
													<Text
														text="Cras sit amet nibh libero, in gravida nulla. Nulla vel metus scelerisque ante sollicitudin commodo. Cras purus odio, vestibulum in vulputate at, tempus viverra turpis. Fusce condimentum nunc ac nisi vulputate fringilla. Donec lacinia congue felis in faucibus." />
												</content>
											</ListMediaItem>

										</ListMedia>
									</content>
								</ListMediaItem>


							</ListMedia>
						</content>

					</Panel>
				</Container>
			</ScrollContainer>
		</body>

	</Page>
</View>