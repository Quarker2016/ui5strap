<View controllerName="ui5strap.ActionController" xmlns="ui5strap" xmlns:demoapp="ui5strap.demoapp.controls"
	xmlns:data="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<!-- The page control -->
	<Page>
		<!-- Head area with horizontal bar -->
		<head>
			<!-- Bar on top of page -->
			<Bar>
				<!-- Left area of bar -->
				<left>
					<Button tap="ui5strap.demoapp.actions.ToggleBarMenuSettings" 
						options="BarButton">
						<Icon icon="columns" />
					</Button>
				</left>
				<!-- Middle area of bar -->
				<middle>
					<Heading text="{i18n>PAGE_SETTINGS_THEME_TITLE}" options="BarHeadingCenter" />
				</middle>
			</Bar>
		</head>
		
		<!-- Body area with page content -->
		<body>
			<Container type="FluidInset">
				<Container type="Well">
					<Paragraph text="{i18n>PAGE_SETTINGS_THEME_INTRO}" />
					<Container>
						<ButtonGroup select="ui5strap.demoapp.actions.ChangeTheme" selectionMode="Single">
							<Button text="base" data:theme="base" selected="true"  />
							<Button id="defaultThemeButton" severity="Primary" text="ui5strap_default" data:theme="ui5strap_default"  />
						</ButtonGroup>
					</Container>
					<Paragraph text="{i18n>PAGE_SETTINGS_THEME_BACK_NOTICE}" />
					
					<ToggleButton></ToggleButton>
					
					<ToggleButton vertical="true"></ToggleButton>
					
					<ToggleButton textSelected="Enabled" textDeselected="Disabled"></ToggleButton>
                    
                    <ToggleButton vertical="true" textSelected="On" textDeselected="Off"></ToggleButton>
					
					<ToggleButton enabled="false"></ToggleButton>
					
					<PickerWheel mode="Mode2D">
					   <Text text="0.0" />
					   <Text text="0.5" />
					   <Text text="1.0" />
					   <Text text="1.5" />
					   <Text text="2.0" />
					   <Text text="2.5" />
					   <Text text="3.0" />
					   <Text text="3.5" />
					   <Text text="4.0" />
					   <Text text="4.5" />
					   <Text text="5.0" />
					   <Text text="5.5" />
					   <Text text="6.0" />
					   <Text text="6.5" />
					   <Text text="7.0" />
					   <Text text="7.5" />
					   <Text text="8.0" />
					   <Text text="8.5" />
					   <Text text="9.0" />
					   <Text text="9.5" />
					   <Text text="10" />
                    </PickerWheel>
					
					<PickerWheel mode="Mode3D" selectedIndex="2">
					   <Icon icon="plane" />
					   <Icon icon="rocket" />
					   <Icon icon="car" />
					   <Icon icon="building" />
					   <Icon icon="star" />
					   <Icon icon="pencil" />
					   <Icon icon="smile-o" />
					   <Icon icon="child" />
					</PickerWheel>
					
					<PickerWheel mode="Mode2D" horizontal="true">
					   <Text text="A" />
                       <Text text="B" />
                       <Text text="C" />
                       <Text text="D" />
                       <Text text="E" />
                       <Text text="F" />
                       <Text text="G" />
                       <Text text="H" />
                       <Text text="I" />
                       <Text text="J" />
                       <Text text="K" />
                       <Text text="L" />
					
					</PickerWheel>
					<PickerWheel mode="Mode3D" horizontal="true">
					   <Text text="A" />
                       <Text text="B" />
                       <Text text="C" />
                       <Text text="D" />
                       <Text text="E" />
                       <Text text="F" />
                       <Text text="G" />
                       <Text text="H" />
                       <Text text="I" />
                       <Text text="J" />
                       <Text text="K" />
                       <Text text="L" />
					</PickerWheel>
					
					<Paragraph>
						<Button 
						text="{i18n>PAGE_SETTINGS_THEME_BACK_BUTTON}"
						tap="ui5strap.demoapp.actions.NavigateToStatistics"
									></Button>
					</Paragraph>
				</Container>
			</Container>
		</body>
		<footer>
				<!-- Bar on top of page -->
				<Bar></Bar>
			</footer>	
	</Page>

</View>