<sapUiCoreMvc:View controllerName="ui5strap.ActionController" xmlns="ui5strap" xmlns:sapUiCoreMvc="sap.ui.core.mvc"
    xmlns:data="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">

	<!-- The page control -->
	<Page>
			<!-- Head area with horizontal bar -->
			<head>
				<!-- Bar on top of page -->
				<Bar inverse="true">
					<!-- Left area of bar -->
					<Container align="PullLeft">
						<!-- Back Button -->
						<Button tap="ui5strap.demoapp.actions.NavigateToHome" 
							options="BarButton">
							<Icon icon="home" />
						</Button>
						<!-- Toggle Menu Button (except for small screens) -->
						<Button tap="ui5strap.demoapp.actions.ToggleBarMenuRoot" 
								options="BarButton" visibilitySmall="HiddenUp" visibilityMedium="VisibleUp">
								<Icon icon="columns" />
						</Button>
					</Container>
					
					<Heading text="{i18n>PAGE_SETTINGS_TITLE}" options="BarHeadingCenter" />
					
					<Container align="PullRight">
						<!-- Toggle Menu Button (only for small screens) -->
						<Button tap="ui5strap.demoapp.actions.ToggleBarMenuRoot" 
								options="BarButton" visibilityExtraSmall="HiddenUp" visibilitySmall="VisibleUp" visibilityMedium="HiddenUp">
								<Icon icon="columns" />
						</Button>
						
					</Container>
				</Bar>
			</head>
			
			<!-- Body area with page content -->
			<body>
				<BarNavContainer
				id="navContainerSettings"
					barVisible="true" 
					barSizeExtraSmall="2"
					pageChange="ui5strap.demoapp.actions.settings.SetSelectedMenuSettings" 
					></BarNavContainer>
			</body>
			
	</Page>

</sapUiCoreMvc:View>