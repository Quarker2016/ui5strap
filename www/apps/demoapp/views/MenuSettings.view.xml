<View controllerName="ui5strap.ActionController" xmlns="ui5strap"
	xmlns:data="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Bar type="Full">
		<BarMenu id="barMenuSettings" typeExtraSmall="ButtonsVertical"
			tap="ui5strap.demoapp.actions.NavigateViaMenuSettings" items="{menu>/subMenuSettings}">
			<BarMenuItem
				text="{formatter:'.formatters.localeString', path:'menu>label'}"
				icon="{menu>icon}" data:pageId="{menu>id}"></BarMenuItem>
		</BarMenu>
	</Bar>
</View>