<View controllerName="ui5strap.ActionController" xmlns="ui5strap"
	xmlns:data="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<!-- The page control -->
	<Page>
			
		<!-- Head area with horizontal bar -->
		<head>
			<Bar inverse="true">
				
				<!-- Toggle Menu Button (except for small screens) -->
				<Container align="PullLeft" visibilitySmall="Hidden" visibilityMedium="Visible">
					<Button tap="ui5strap.demoapp.actions.ToggleBarMenuRoot" 
						options="BarButton">
						<Icon icon="columns" />
					</Button>
				</Container>
					
					<Heading level="1" options="BarHeadingCenter">
						<Text text="{i18n>PAGE1_TITLE}" />
						<Text type="Label" severity="Success" text="New" />
					</Heading>
					
					<!-- Toggle Menu Button (only for small screens) -->
					<Container  align="PullLeft" type="Text" visibilityExtraSmall="Hidden" visibilitySmall="Visible" visibilityMedium="Hidden">
						<Button tap="ui5strap.demoapp.actions.ToggleBarMenuRoot" 
							options="BarButton">
							<Icon icon="columns" />
						</Button>
					</Container>
								
			</Bar>
		</head>
		
		<!-- Body area with page content -->
		<body>
			<ScrollContainer vertical="true">
				<Container type="FluidInset">
					<Text type="Lead" textAlign="Center" text="{i18n>HOME_INTRO}" />
					
					<Paragraph textAlign="Center">
						<Image mpath="ui5strap.demoapp.img.awesome" ext="png" alt="Image" width="256" height="256" />
					</Paragraph>
					<Row>
						<Col columnsSmall="6" offsetSmall="3" columnsMedium="6" offsetMedium="3" >
							<ListGroup 
								tap="ui5strap.demoapp.actions.NavigateViaMenuRoot" 
								items="{menu>/root}"
								listMode="Navigation"
							>
								<ListGroupItem 
									text="{formatter:'.formatters.localeString', path:'menu>label'}" 
									badge="{menu>badge}"
									icon="chevron-right"
									severity="{menu>severity}"
								>
								</ListGroupItem>
							</ListGroup>
						</Col>
					</Row>
				</Container>
			</ScrollContainer>
		</body>
			
	</Page>

</View>