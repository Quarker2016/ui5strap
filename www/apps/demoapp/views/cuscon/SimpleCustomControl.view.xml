                                        <TableColumn text="7824" />
                                        <TableColumn text="652" />
                                    </TableRow>
                                </body>
                            </Table>
                            
                        </Col>
                    </Row>
                </Container>
            </ScrollContainer>
        </body>
        
    </Page>

</sapUiCoreMvc:View>