<sapUiCoreMvc:View controllerName="ui5strap.ActionController" xmlns="ui5strap" xmlns:sapUiCoreMvc="sap.ui.core.mvc"
    xmlns:demoapp="ui5strap.demoapp.controls" xmlns:data="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
    <!-- The page control -->
    <Page>
        <!-- Head area with horizontal bar -->
        <head>
            <!-- Bar on top of page -->
            <Bar>
                <!-- Left area of bar -->
                <left>
                    <Button tap="ui5strap.demoapp.actions.cuscon.ToggleBarMenuCuscon" 
                        options="BarButton">
                        <Icon icon="columns" />
                    </Button>
                </left>
                <!-- Middle area of bar -->
                <middle>
                    <Heading text="{i18n>PAGE_SETTINGS_THEME_TITLE}" options="BarHeadingCenter" />
                </middle>
            </Bar>
        </head>
        
        <!-- Body area with page content -->
        <body>
            <ScrollContainer vertical="true">
            <Container type="FluidInset">
                
                
                
                    <Row>
                        <!-- Left Column -->
                        <Col columnsExtraSmall="12" columnsSmall="6">
                              <demoapp:YouTubeVideoPlayer youTubeId="nfL5DXIalvI" />
                        
                            <Container type="Well" options="dd" id="testContainer"> 
                                <Heading level="1" text="{i18n>PAGE3_HEADING1_TITLE}" />
                                <Text id="testParagraph" type="Lead" parse="true" text="{i18n>PAGE3_HEADING1_TEXT}" />
                                <Paragraph>
                                    <Button tap=".handleTap" text="Test" />
                                </Paragraph>
                            </Container>
                        </Col>
                        
                        <!-- Right Column -->
                        <Col columnsExtraSmall="12" columnsSmall="6">
                        
                            <Table bordered="true" hover="true">
                                <head>
                                    <TableRow>
                                        <TableColumn text="" />
                                        <TableColumn text="A" />
                                        <TableColumn text="B" />
                                        <TableColumn text="C" />
                                        <TableColumn text="D" />
                                        <TableColumn text="E" />
                                    </TableRow>
                                </head>
                                <body>
                                    <TableRow>
                                        <TableColumn text="1" />
